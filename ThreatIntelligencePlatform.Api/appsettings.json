{
    "ConnectionStrings": {
        "DefaultConnectionString": "Host=localhost;Port=5432;Username=admin;Password=admin;Database=tip_users"
    },
    "Serilog": {
        "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch"],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "Elasticsearch",
                "Args": {
                    "nodeUris": "http://elasticsearch:9200",
                    "indexFormat": "tip-logs-{0:yyyy.MM.dd}",
                    "autoRegisterTemplate": true
                }
            }
        ],
        "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
    },
    "AllowedHosts": "*",
    "UserDataSeeder": {
        "AdminEmail": "admin@admin",
        "AdminPassword": "Qwe!123"
    },
    "RoleDataSeeder": {
        "RolesToSeed": ["Admin", "User"]
    },
    "Jwt": {
        "SecretKey": "supersecretkey1234567890supersecretkey1234567890supersecretkey1234567890",
        "ExpiryInMinutes": 60,
        "Issuer": "http://localhost:5058",
        "Audience": "http://localhost:5058"
    },
    "ApiPolling": {
        "PollingIntervalMinutes": 2
    }
}
